# @desc: Title (transpile test)

:title "Global Menu Title"
:title-font "sans-serif, 18"
:fg-title "#ff0000"

# Basic tests
a "command a" +title "Level A Title" +write %{{echo "command a executed"}}
b "command b" +write %{{echo "command b executed"}}
c "prefix with title" +title "Prefix Title" {
    d "nested command" +write %{{echo "nested command executed"}}
    e "nested with own title" +title "Nested Title" +write %{{echo "nested with title"}}
}
f "prefix no title" {
    g "inherits no title" +write %{{echo "no title inheritance"}}
}
h "empty title test" +title "" +write %{{echo "empty title"}}

# Interpolation tests
i "interpolation test" +title "Key: %(key)" +write %{{echo "interpolation"}}

# Multi-level nested inheritance test
k "level 1" +title "L1 Title" {
    l "level 2" {
        m "level 3" +write %{{echo "level 3"}}
        n "level 3 override" +title "L3 Override" +write %{{echo "l3 override"}}
    }
    o "level 2 override" +title "L2 Override" {
        p "level 3 inherits L2" +write %{{echo "inherits l2"}}
    }
}

# Chord array with title
[qrs] "array item" +title "Array Title" +write %{{echo "array"}}

# Implicit array with title
... "implicit" +title "Implicit Title" +write %{{echo "implicit"}}

# Variable test
:var "my_var" "My Custom Text"
x "var test" +title "%(my_var)" +write %{{echo "var"}}

# Unicode and special characters
y "unicode test" +title "Title with emoji" +write %{{echo "unicode"}}
z "special chars" +title "Title with quotes and backslash" +write %{{echo "special"}}

# Override behavior (last title wins)
1 "override test" +title "First" +title "Second" +write %{{echo "override"}}

# Complex flag combinations
2 "title with keep" +title "Keep Title" +keep +write %{{echo "keep"}}
3 "title with deflag" +title "Deflag Title" +deflag +write %{{echo "deflag"}}
4 "parent for inherit" +title "Parent Title" {
    5 "child with inherit" +inherit +write %{{echo "inherit"}}
}
